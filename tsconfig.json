{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "./dist",
		"baseUrl": "./src",
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"lib": [
		"es2015"
	],
}
